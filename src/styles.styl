@require 'settings/breakpoints'

.modal--fullscreen.modal--fullscreen // HACK to increase specificity
    // TODO fix this when we have a proper way to add a
    // custom class on Modal components
    & > div > div > div > div
        padding-top 0
        padding-bottom 0
        overflow hidden
        max-width unset

    :global
        .coz-intent
            width 85vw
            height 85vh

            +small-screen()
                width 100%

    iframe
        width 100%
        height 100%
        border 0

    .content
        line-height 0
